<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling Persegi"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang Sisi"
            android:id="@+id/editTextKelilingPersegi"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView" android:numeric="decimal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Keliling Persegi Adalah"
            android:id="@+id/textView1"
            android:layout_alignLeft="@+id/editTextKelilingPersegi"
            android:layout_below="@+id/editTextKelilingPersegi" android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Hasil"
            android:textSize="10pt"
            android:id="@+id/textViewKelilingPersegi"
            android:layout_alignLeft="@+id/editTextKelilingPersegi"
            android:layout_below="@+id/textView1"
            android:gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextKelilingPersegi"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/buttonKelilingPersegi"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Kembali"/>
        <Button
                android:id="@+id/buttonKelilingPersegi1"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Hitung"/>
    </LinearLayout>
</RelativeLayout>