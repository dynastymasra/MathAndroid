<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume Limas"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Luas Alas"
            android:id="@+id/editTextVolumeLimas"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView"
            android:numeric="decimal"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Tinggi"
            android:id="@+id/editTextVolumeLimas1"
            android:layout_alignLeft="@+id/editTextVolumeLimas"
            android:layout_below="@+id/editTextVolumeLimas"
            android:numeric="decimal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Volume Limas Adalah"
            android:id="@+id/textView1"
            android:layout_alignLeft="@+id/editTextVolumeLimas"
            android:layout_below="@+id/editTextVolumeLimas1"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:id="@+id/textViewVolumeLimas"
            android:layout_alignLeft="@+id/editTextVolumeLimas"
            android:layout_below="@+id/textView1"
            android:gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextVolumeLimas"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/buttonVolumeLimas"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="Kembali"/>
        <Button
                android:id="@+id/buttonVolumeLimas1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="Hitung"/>
    </LinearLayout>
</RelativeLayout>