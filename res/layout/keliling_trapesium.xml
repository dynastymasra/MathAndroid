<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling Trapesium"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang AB"
            android:id="@+id/editTextKelilingTrapesium"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView"
            android:numeric="decimal"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang BC"
            android:id="@+id/editTextKelilingTrapesium1"
            android:layout_alignLeft="@+id/editTextKelilingTrapesium"
            android:layout_below="@+id/editTextKelilingTrapesium"
            android:numeric="decimal"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang CD"
            android:id="@+id/editTextKelilingTrapesium2"
            android:layout_alignLeft="@+id/editTextKelilingTrapesium"
            android:layout_below="@+id/editTextKelilingTrapesium1"
            android:numeric="decimal"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang DA"
            android:id="@+id/editTextKelilingTrapesium3"
            android:layout_alignLeft="@+id/editTextKelilingTrapesium"
            android:layout_below="@+id/editTextKelilingTrapesium2"
            android:numeric="decimal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling Trapesium Adalah"
            android:id="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editTextKelilingTrapesium3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:id="@+id/textViewKelilingTrapesium"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextKelilingTrapesium"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/buttonKelilingTrapesium"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"/>
        <Button
                android:id="@+id/buttonKelilingTrapesium1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hitung"/>
    </LinearLayout>
</RelativeLayout>