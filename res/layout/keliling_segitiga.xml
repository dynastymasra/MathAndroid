<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling Segitiga"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang AB"
            android:id="@+id/editTextKelilingSegitiga"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView" android:numeric="decimal"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang BC"
            android:id="@+id/editTextKelilingSegitiga1"
            android:layout_alignLeft="@+id/editTextKelilingSegitiga"
            android:layout_below="@+id/editTextKelilingSegitiga" android:numeric="decimal"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang AC"
            android:id="@+id/editTextKelilingSegitiga2"
            android:layout_alignLeft="@+id/editTextKelilingSegitiga"
            android:layout_below="@+id/editTextKelilingSegitiga1" android:numeric="decimal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Keliling Segitiga Adalah"
            android:id="@+id/textView1"
            android:layout_alignLeft="@+id/editTextKelilingSegitiga"
            android:layout_below="@+id/editTextKelilingSegitiga2" android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="10pt"
            android:id="@+id/textViewKelilingSegitiga"
            android:layout_alignLeft="@+id/editTextKelilingSegitiga"
            android:layout_below="@+id/textView1" android:gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextKelilingSegitiga"
            android:layout_alignParentBottom="true">
        <Button
                android:text="Kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonKelilingSegitiga"/>
        <Button
                android:text="Hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonKelilingSegitiga1"/>
    </LinearLayout>
</RelativeLayout>