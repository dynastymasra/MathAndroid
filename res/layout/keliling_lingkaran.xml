<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling Lingkaran"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Panjang Jari-jari"
            android:id="@+id/editTextKelilingLingkaran"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView"
            android:numeric="decimal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keliling Lingkaran Adalah"
            android:id="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editTextKelilingLingkaran"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hasil"
            android:textSize="10pt"
            android:id="@+id/textViewKelilingLingkaran"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextKelilingLingkaran"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/buttonKelilingLingkaran"
                android:text="Kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/buttonKelilingLingkaran1"
                android:text="Hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>